<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Triland" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkBlueTriland</item>
        <item name="colorPrimaryVariant">@color/blueTriland</item>
        <item name="colorOnPrimary">@color/silverTriland</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/silverTriland</item>
        <item name="colorSecondaryVariant">@color/blueTriland</item>
        <item name="colorOnSecondary">@color/silverTriland</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.Triland">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>