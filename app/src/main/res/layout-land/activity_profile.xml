<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlueTriland"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_box"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/emailTextView"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/custom_text"
                android:gravity="center"
                android:text="Correo electrónico"
                android:textColor="@color/silverTriland"
                android:textSize="14dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nameTextView"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_input_white"
                    android:gravity="center"
                    android:text="Nombre"
                    android:textColor="@color/darkBlueTriland"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_input"
                    android:gravity="center"
                    android:hint="Nombre"
                    android:textColor="@color/silverTriland"
                    android:textColorHint="@color/silverTriland"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/surnameTextView"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/custom_input_white"
                    android:gravity="center"
                    android:text="Apellidos"
                    android:textColor="@color/darkBlueTriland"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/surnameEditText"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/custom_input"
                    android:gravity="center"
                    android:hint="Apellidos"
                    android:textColor="@color/silverTriland"
                    android:textColorHint="@color/silverTriland"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/adressTextView"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_input_white"
                    android:gravity="center"
                    android:text="Dirección"
                    android:layout_marginRight="15dp"
                    android:textColor="@color/darkBlueTriland"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/adressEditText"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/custom_input"
                    android:gravity="center"
                    android:hint="Dirección"
                    android:textColor="@color/silverTriland"
                    android:textColorHint="@color/silverTriland"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/phoneTextView"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_input_white"
                    android:gravity="center"
                    android:text="Teléfono"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/darkBlueTriland"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:background="@drawable/custom_input"
                    android:gravity="center"
                    android:hint="Teléfono"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/silverTriland"
                    android:textColorHint="@color/silverTriland"
                    android:textSize="14dp"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/changeButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/silverTriland"
                android:drawableLeft="@drawable/ic_edit"
                android:drawableTint="@color/darkBlueTriland"
                android:text="Cambiar datos"
                android:textColor="@color/darkBlueTriland" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/silverTriland"
                android:drawableLeft="@drawable/ic_save"
                android:drawableTint="@color/darkBlueTriland"
                android:text="Guardar"
                android:textColor="@color/darkBlueTriland"
                android:visibility="gone" />

            <Button
                android:id="@+id/logoutButton"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/silverTriland"
                android:drawableLeft="@drawable/ic_logout"
                android:drawableTint="@color/darkBlueTriland"
                android:text="Cerrar sesión"
                android:textColor="@color/darkBlueTriland" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>