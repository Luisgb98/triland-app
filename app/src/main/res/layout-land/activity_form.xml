<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkBlueTriland"
    android:orientation="vertical"
    tools:context=".FormActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="650dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/custom_box"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/emailTextView"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="@string/email"
                        android:textColor="@color/darkBlueTriland"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/nameTV"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:text="@string/name"
                        android:textColor="@color/darkBlueTriland"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/emailET"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/custom_input"
                        android:gravity="center"
                        android:hint="@string/email"
                        android:textColor="@color/silverTriland"
                        android:textColorHint="@color/silverTriland"
                        android:textSize="14dp" />

                    <EditText
                        android:id="@+id/nameET"
                        android:layout_width="250dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/custom_input"
                        android:gravity="center"
                        android:hint="@string/name"
                        android:textColor="@color/silverTriland"
                        android:textColorHint="@color/silverTriland"
                        android:textSize="14dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/messageTV"
                    android:layout_width="250dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="@string/message"
                    android:textColor="@color/darkBlueTriland"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/messageET"
                    android:layout_width="600dp"
                    android:layout_height="130dp"
                    android:background="@drawable/custom_input"
                    android:gravity="top"
                    android:hint="@string/message"
                    android:padding="5dp"
                    android:textColor="@color/silverTriland"
                    android:textColorHint="@color/silverTriland"
                    android:textSize="14dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/sendButton"
                    android:layout_width="250dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="10dp"
                    android:backgroundTint="@color/silverTriland"
                    android:drawableLeft="@drawable/ic_edit"
                    android:drawableTint="@color/darkBlueTriland"
                    android:text="@string/send"
                    android:textColor="@color/darkBlueTriland" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>